<!--scale recipe window with a dropdown with the available optipns -->
    <Window x:Class="RecipeApplication.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Scale Recipe" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ComboBox x:Name="SelectScalingFactor" Text="Select Scaling Factor" SelectionChanged="SelectComboBox_SelectionChanged"/>
            <Button Content="Scale" Click="Scale_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
